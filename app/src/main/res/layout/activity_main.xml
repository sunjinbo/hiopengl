<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="onP1Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="GLSurfaceView + OpenGL ES" />

        <Button
            android:onClick="onP2Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="TextureView + OpenGL ES" />

        <Button
            android:onClick="onP3Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="SurfaceView + OpenGL ES" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="SurfaceView + Canvas" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="Points, Line and Triangles" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="Polyhedron" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="OpenGL GLSL" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="Modeling and Viewing" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="Projection" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="Viewport" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="OpenGL Lighting" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="OpenGL Texture" />

        <Button
            android:onClick="onP4Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textAllCaps="false"
            android:text="OpenGL Particle Effect" />

    </LinearLayout>

</ScrollView>